<div class="row">
    <div class="col-md-6 offset-3">
        <button id="add-person" class="btn btn-success">Add Another Person</button>
        <br />
        <br />
        <form action="/home/addpeople" method="post" class="card card-body bg-light">
            <div class="row" id="a-person">
                <div class="col-md-4">
                    <input name="ppl[0].FirstName" type="text" class="form-control" placeholder="First Name" />
                </div>
                <div class="col-md-4">
                    <input name="ppl[0].LastName" type="text" class="form-control" placeholder="Last Name" />
                </div>
                <div class="col-md-4">
                    <input name="ppl[0].Age" type="text" class="form-control" placeholder="Age" />
                </div>
                <br /> <br />
            </div>
            <br /><br />
            <div class="col-md-2">
                <button class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>

@section Scripts{ 
    <script src="~/js/AddPeople.js"></script>
}