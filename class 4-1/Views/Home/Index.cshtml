@model HomeViewModel

<div class="row">
    <div class="col-md-8 offset-2">
        <a href="/home/addpeople" class="btn btn-primary">Add People</a>
        <br />
        <br />
        <table class="table table-striped table-bordered">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
            </tr>
            @foreach (Person p in Model.People)
            {
                <tr>
                    <td>@p.FirstName</td>
                    <td>@p.LastName</td>
                    <td>@p.Age</td>
                </tr>
            }
        </table>
    </div>
</div>
